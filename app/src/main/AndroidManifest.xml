<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.family_artifact_register">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- CAMERA -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.ArtifactHub.ArtifactDetailActivity"
            android:parentActivityName=".UI.ArtifactHub.HubActivity"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.ArtifactHub.HubActivity"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".UI.Social.FriendActivity"
            android:parentActivityName=".MainActivity">
            <meta-data android:name="android.app.default_searchable"
                android:value=".UI.Social.FriendSearchActivity"/>
        </activity>
        <activity android:name=".UI.Social.FriendDetailActivity"
            android:parentActivityName=".UI.Social.FriendActivity"
            />

        <activity android:name=".UI.Social.FriendSearchActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable" />
        </activity>

        <activity android:name=".UI.ArtifactManager.ArtifactManageActivity"
            android:parentActivityName=".MainActivity"
            />
        <activity android:name=".UI.ArtifactManager.NewArtifactActivity"
            android:parentActivityName=".UI.ArtifactManager.ArtifactManageActivity"
            />
        <activity android:name=".UI.ArtifactManager.HappenedActivity"
            android:parentActivityName=".UI.ArtifactManager.ArtifactManageActivity"
            />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.mydomain.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>