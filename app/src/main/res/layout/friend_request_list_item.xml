<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:contentDescription="avatar"
        android:src="@drawable/default_avatar_list" />

    <TextView
        android:id="@+id/request_username"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/request_avatar"
        android:gravity="center_vertical"
        android:text="@string/friend_request_list_item_request_username"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/request_accept_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="@string/friend_request_list_item_request_accept_button" />

</RelativeLayout>