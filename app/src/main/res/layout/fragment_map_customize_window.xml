<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_sample_with_map_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.appolica.interactiveinfowindow.customview.TouchInterceptFrameLayout
        android:id="@+id/fragment_map_customize_window_map_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.gms.maps.MapView
            android:id="@+id/fragment_map_customize_window_map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.appolica.interactiveinfowindow.customview.TouchInterceptFrameLayout>

</RelativeLayout>