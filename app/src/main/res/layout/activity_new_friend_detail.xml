<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_new"
            android:contentDescription="avatar"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/default_avatar_detail"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toEndOf="@id/avatar_new"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/username_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/area_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="area"
                android:textSize="25sp"/>

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/small_divider"/>

    <TextView
        android:id="@+id/add_friend"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Add to contact list"
        android:textSize="25sp"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"/>

    <include layout="@layout/line_divider"/>

</LinearLayout>