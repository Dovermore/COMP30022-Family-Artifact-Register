<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:padding="16dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.ArtifactDetail.ArtifactDetailActivity"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearlayout">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/avatarIv">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor">
            </TextView>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginTop="10dp">

        </FrameLayout>


    <!--    <ImageView-->
    <!--        android:id="@+id/imageIv"-->
    <!--        android:layout_width="200dp"-->
    <!--        android:layout_height="200dp"-->
    <!--        android:layout_centerHorizontal="true"-->
    <!--        android:src="@mipmap/ic_launcher"-->
    <!--        android:layout_below="@id/avatarIv"-->
    <!--        android:layout_marginBottom="10dp"-->
    <!--        android:layout_marginEnd="10dp">-->

    <!--    </ImageView>-->

        <FrameLayout
            android:id="@+id/map_happened"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/post_image"
            android:layout_marginHorizontal="10px"
            android:layout_marginBottom="20dp"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc"
            android:textSize="18sp"
            android:textColor="@color/primaryTextColor"
            android:layout_below="@id/linearlayout"
            android:layout_marginTop="5dp"
            >
        </TextView>

        <TextView
            android:id="@+id/store_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:layout_below="@id/map_happened"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal"
            android:layout_below="@+id/store_location"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/view_comment"
                />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/view_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeWidth="0dp"
                    android:text="@string/comment"
                    android:layout_toLeftOf="@+id/view_timeline"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/view_timeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeWidth="0dp"
                    android:text="@string/timeline"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>